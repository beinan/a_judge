extends ../layout

block content
  .page-header
    h3 Create a Question

  form.form-horizontal(action='/admin/create_question', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-2.control-label(for='question_title') Title
      .col-sm-4
        input.form-control(type='text', name='title', id='question_title')
    .form-group
      label.col-sm-2.control-label(for='question_desc') Description
      .col-sm-4
        textarea.form-control(rows='5', name='desc', id='question_desc')
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-warning(type='submit') Save